<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/padding_mini" />
            <solid android:color="@color/transparent_white" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/padding_mini" />
            <solid android:color="@color/bgWhiteTransparent" />
            <stroke android:width="1dp" android:color="@color/transparent_white" />
        </shape>
    </item>
</selector>