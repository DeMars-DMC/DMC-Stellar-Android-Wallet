<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_horizontal"
            android:paddingTop="@dimen/padding_horizontal"
            android:paddingEnd="@dimen/padding_horizontal"
            android:paddingBottom="@dimen/padding_vertical">

            <io.demars.stellarwallet.views.CustomSelector
                android:id="@+id/sellingCustomSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:customStrokeColor="@color/colorPrimary"
                app:hint="@string/selling_hint"
                app:inputType="decimal" />

            <TextView
                android:id="@+id/availableToSell"
                style="@style/WhiteRegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_micro"
                android:layout_marginTop="@dimen/padding_mini"
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:layout_below="@id/sellingCustomSelector"
                tools:text="1,000,000,000.1234567 PTS" />

            <Button
                android:id="@+id/sellAll"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:text="@string/sell_100"
                android:visibility="invisible"
                android:textAllCaps="false"
                android:background="@drawable/background_card_clickable_yellow"
                android:layout_marginTop="@dimen/padding_mini"
                android:textColor="@color/colorYellow"
                android:layout_below="@id/availableToSell"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/swapCurrenciesButton"
                android:enabled="false"/>

            <ImageView
                android:id="@+id/swapCurrenciesButton"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_swap_vert_palesky"
                android:theme="@style/ClickableItem"
                android:layout_marginEnd="@dimen/padding_horizontal"
                android:layout_marginTop="@dimen/padding_horizontal"
                android:layout_marginStart="@dimen/padding_horizontal"
                android:layout_below="@+id/sellingCustomSelector"
                android:layout_alignEnd="@+id/sellingCustomSelector"
                android:layout_above="@id/buyingCustomSelector"/>

            <io.demars.stellarwallet.views.CustomSelector
                android:id="@+id/buyingCustomSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_horizontal"
                app:customStrokeColor="@color/colorPrimary"
                app:hint="@string/buying_hint"
                android:layout_below="@id/sellAll"
                app:inputType="decimal" />

            <TextView
                android:id="@+id/buyingBalance"
                style="@style/WhiteRegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_micro"
                android:layout_marginTop="@dimen/padding_mini"
                android:textStyle="bold"
                android:layout_below="@+id/buyingCustomSelector"
                tools:text="1,000,000,000.1234567 PTS" />

            <TextView
                android:id="@+id/prices"
                style="@style/WhiteRegularText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/padding_micro"
                android:layout_marginTop="@dimen/padding_horizontal"
                android:layout_below="@id/buyingBalance"
                tools:text="Price: 1 XLM = 1.25 DMC" />

            <TextView
                android:id="@+id/pricesExplain"
                style="@style/LongWhiteDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_mini"
                android:paddingBottom="@dimen/padding_mini"
                android:text="@string/exchange_tab_notes"
                android:layout_below="@id/prices"/>

            <Button
                android:id="@+id/placeTrade"
                style="@style/ButtonStyleAccent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_big"
                android:layout_marginTop="@dimen/padding_horizontal"
                android:enabled="false"
                android:layout_below="@id/pricesExplain"
                android:text="@string/place_trade" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>