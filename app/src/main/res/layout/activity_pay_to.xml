<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_dark"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="@dimen/padding_vertical"
            android:layout_height="@dimen/button_height_big"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:layout_marginEnd="@dimen/padding_horizontal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/receive"
            android:src="@drawable/ic_chevron_left"
            android:theme="@style/ClickableItem" />

        <ImageView
            android:id="@+id/assetLogo"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_toEndOf="@id/backButton"
            android:contentDescription="@string/reporting_currency"
            app:layout_constraintTop_toTopOf="parent"
            tool:src="@drawable/ic_logo_stellar_white" />

        <LinearLayout
            android:id="@+id/assetBalanceContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:orientation="vertical"
            android:layout_toEndOf="@id/assetLogo">

            <TextView
                android:id="@+id/assetName"
                style="@style/WhiteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="XLM" />

            <TextView
                android:id="@+id/assetBalance"
                style="@style/WhiteDigitalInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textSize="@dimen/text_size_xxbig"
                tool:text="353.23" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/addressContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_big"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="@dimen/padding_horizontal"
        android:layout_marginStart="@dimen/padding_horizontal"
        android:layout_marginEnd="@dimen/padding_horizontal"
        android:background="@drawable/bg_card_clickable"
        android:orientation="horizontal"
        tool:ignore="UnusedAttribute">

        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="@null"
            android:digits="@string/stellar_address_alphabet"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/enter_public_address"
            android:inputType="textCapCharacters"
            android:padding="@dimen/padding_horizontal"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/whiteMain"
            android:textColorHint="@color/transparent_white"
            android:textSize="@dimen/text_size_small"
            tool:text="ALAJSLDJFALSKDFJ2L3KDFASDFSDA4JLSDKFJL34KJ5LKSZJGFLKSJL4" />

        <ImageButton
            android:id="@+id/cameraImageButton"
            android:layout_width="@dimen/button_height_big"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/open_camera_to_scan_qr"
            android:src="@drawable/ic_qr_scanner" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/payToContactButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_big"
        android:layout_below="@id/addressContainer"
        android:layout_marginStart="@dimen/padding_horizontal"
        android:layout_marginTop="@dimen/padding_mini"
        android:layout_marginEnd="@dimen/padding_horizontal"
        android:background="@drawable/background_card_clickable_accent"
        android:orientation="horizontal">

        <TextView
            style="@style/ButtonTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/pay_to_contact"
            android:textColor="@color/colorAccent" />

        <ImageView
            android:layout_width="@dimen/button_height_big"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:padding="@dimen/padding_medium"
            android:src="@drawable/ic_pay_contact"
            android:tint="@color/colorAccent" />
    </FrameLayout>

    <TextView
        android:id="@+id/payToTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LongWhiteDescription"
        android:layout_margin="@dimen/padding_horizontal"
        android:text="@string/tip_pay_to"
        android:layout_below="@id/payToContactButton"/>

    <io.demars.stellarwallet.views.DmcRoundButton
        android:id="@+id/nextButton"
        android:layout_width="@dimen/logo_width_pin"
        android:layout_height="@dimen/logo_width_pin"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_round_clickable_green"
        android:enabled="false"
        android:padding="@dimen/padding_mini"
        android:rotation="270"
        android:src="@drawable/ic_arrow_deposit"
        android:layout_marginTop="@dimen/padding_vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/payToTip"/>

    <TextView
        android:id="@+id/confirmButtonLabel"
        style="@style/WhiteDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nextButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_horizontal"
        android:text="@string/next" />

</RelativeLayout>
