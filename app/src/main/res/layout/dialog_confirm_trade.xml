<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_vertical"
    android:paddingStart="@dimen/padding_vertical"
    android:paddingEnd="@dimen/padding_vertical">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_mini"
        android:gravity="center_vertical"
        android:text="@string/confirm_trade_title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_big"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/sellingContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/sellingLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="@string/selling"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"
            tools:text="Selling" />

        <TextView
            android:id="@+id/sellingAmount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"
            tools:text="1.22023000001" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sellingLogo"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="end"
                android:padding="@dimen/padding_mini"
                tools:src="@drawable/ic_logo_eurt" />

            <TextView
                android:id="@+id/sellingCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/padding_mini"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                tools:text="EURT" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buyingContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/buyingLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="@string/receiving"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"
            tools:text="Receiving" />

        <TextView
            android:id="@+id/buyingAmount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"
            tools:text="14.220231" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buyingLogo"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="end"
                android:padding="@dimen/padding_mini"
                tools:src="@drawable/ic_logo_stellar" />

            <TextView
                android:id="@+id/buyingCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/padding_mini"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                tools:text="XLM" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_big"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="?attr/selectableItemBackground"
            android:text="@string/edit"
            android:textColor="@color/colorPaleSky"/>

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="?attr/selectableItemBackground"
            android:text="@string/confirm"
            android:textColor="@color/colorAccent" />


    </LinearLayout>
</LinearLayout>