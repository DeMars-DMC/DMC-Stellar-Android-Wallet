<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_dark">

    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_big"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="@dimen/button_height_big"
            android:layout_height="@dimen/button_height_big"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_medium"
            android:src="@drawable/ic_close"
            android:theme="@style/ClickableItem" />

        <ImageView
            android:id="@+id/assetLogo"
            android:layout_width="@dimen/button_height_big"
            android:layout_height="@dimen/button_height_big"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/padding_medium"
            android:src="@drawable/ic_logo_asset" />

        <TextView
            android:id="@+id/titleView"
            style="@style/WhiteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/deposit"
            android:textSize="@dimen/text_size_medium" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/amountTip"
        android:layout_below="@+id/amountDivider">

        <io.demars.stellarwallet.views.DmcRoundButton
            android:id="@+id/submitButton"
            android:layout_width="@dimen/button_height_big"
            android:layout_height="@dimen/button_height_big"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/padding_horizontal"
            android:background="@drawable/background_round_clickable_green"
            android:enabled="false"
            android:padding="@dimen/padding_mini"
            android:rotation="270"
            android:src="@drawable/ic_arrow_deposit"
            android:visibility="gone" />

        <TextView
            android:id="@+id/amountTextView"
            style="@style/WhiteBoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/default_value"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_xxbig"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/addBankContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topDivider"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/addBankForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:layout_marginTop="@dimen/padding_mini"
            android:layout_marginEnd="@dimen/padding_horizontal"
            android:background="@drawable/bg_card_clickable"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_micro"
            android:paddingBottom="@dimen/padding_micro">

            <TextView
                android:theme="@style/ClickableItem"
                android:id="@+id/bankPicker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_big"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding_horizontal"
                android:paddingTop="@dimen/padding_micro"
                android:paddingEnd="@dimen/padding_horizontal"
                android:paddingBottom="@dimen/padding_micro"
                android:text="@string/select_bank"
                android:textColor="@color/transparent_white"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:theme="@style/ClickableItem"
                android:id="@+id/accountTypePicker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_big"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding_horizontal"
                android:paddingTop="@dimen/padding_micro"
                android:paddingEnd="@dimen/padding_horizontal"
                android:paddingBottom="@dimen/padding_micro"
                android:text="@string/account_type"
                android:textColor="@color/transparent_white"
                android:textSize="@dimen/text_size_small" />

            <EditText
                android:id="@+id/accountNumberInput"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_big"
                android:background="@null"
                android:hint="@string/enter_account_number"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="@dimen/padding_horizontal"
                android:paddingTop="@dimen/padding_micro"
                android:paddingEnd="@dimen/padding_horizontal"
                android:paddingBottom="@dimen/padding_micro"
                android:textColor="@color/whiteMain"
                android:textColorHint="@color/transparent_white"
                android:textSize="@dimen/text_size_small" />

            <EditText
                android:id="@+id/accountExtraInput"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_big"
                android:background="@null"
                android:hint="@string/enter_swift_or_bic"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="@dimen/padding_horizontal"
                android:paddingTop="@dimen/padding_micro"
                android:paddingEnd="@dimen/padding_horizontal"
                android:paddingBottom="@dimen/padding_micro"
                android:textColor="@color/whiteMain"
                android:textColorHint="@color/whiteSecondary"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <TextView
            android:id="@+id/bankAccountExplain"
            style="@style/LongWhiteDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_horizontal"
            android:paddingTop="@dimen/padding_mini"
            android:paddingEnd="@dimen/padding_horizontal"
            android:paddingBottom="@dimen/padding_mini"
            android:text="@string/bank_account_explain" />

        <LinearLayout
            android:id="@+id/addBankButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="vertical">

            <io.demars.stellarwallet.views.DmcRoundButton
                android:id="@+id/addDestanationButton"
                android:layout_width="@dimen/logo_width_pin"
                android:layout_height="@dimen/logo_width_pin"
                android:layout_gravity="center_horizontal"
                android:alpha="0.5"
                android:background="@drawable/background_round_clickable_green"
                android:enabled="false"
                android:padding="@dimen/padding_mini"
                android:rotation="270"
                android:src="@drawable/ic_arrow_deposit" />

            <TextView
                android:id="@+id/addBankLabel"
                style="@style/WhiteDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_horizontal"
                android:text="@string/to_proceed_enter_valid" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/depositAmountContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/amountDivider"
        android:orientation="vertical"
        android:visibility="gone"
        tool:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:layout_marginTop="@dimen/padding_mini"
            android:layout_marginEnd="@dimen/padding_horizontal"
            android:background="@drawable/bg_card_transparent"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_horizontal"
            android:paddingBottom="@dimen/padding_horizontal">

            <TextView
                android:id="@+id/depositAmountTextView"
                style="@style/WhiteBoldText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding_horizontal"
                android:paddingEnd="@dimen/padding_horizontal"
                android:textSize="@dimen/text_size_big"
                tool:text="5000.00 ZAR" />

        </LinearLayout>

        <TextView
            android:id="@+id/depositConfirmExplain"
            style="@style/LongWhiteDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_horizontal"
            android:paddingTop="@dimen/padding_mini"
            android:paddingEnd="@dimen/padding_horizontal"
            android:paddingBottom="@dimen/padding_mini"
            android:text="@string/deposit_confirm_massage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_big"
            android:layout_marginTop="@dimen/padding_horizontal"
            android:paddingStart="@dimen/padding_horizontal"
            android:paddingEnd="@dimen/padding_horizontal">

            <CheckBox
                android:id="@+id/agreeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_micro"
                android:theme="@style/CheckBoxTheme" />

            <TextView
                android:id="@+id/agreeText"
                style="@style/WhiteDescription"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/agree_request_terms" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/confirmButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:gravity="center"
            android:layout_marginTop="@dimen/padding_horizontal"
            android:orientation="vertical">

            <io.demars.stellarwallet.views.DmcRoundButton
                android:id="@+id/confirmButton"
                android:layout_width="@dimen/logo_width_pin"
                android:layout_height="@dimen/logo_width_pin"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background_round_clickable_green"
                android:enabled="false"
                android:padding="@dimen/padding_mini"
                android:rotation="270"
                android:src="@drawable/ic_arrow_deposit" />

            <TextView
                android:id="@+id/confirmButtonLabel"
                style="@style/WhiteDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_horizontal"
                android:text="@string/confirm_and_submit" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/padding_mini"
            android:visibility="gone" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/selectedBankContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topDivider"
        android:layout_marginStart="@dimen/padding_horizontal"
        android:layout_marginTop="@dimen/padding_mini"
        android:layout_marginEnd="@dimen/padding_horizontal"
        android:background="@drawable/bg_card_transparent"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_horizontal"
        android:paddingBottom="@dimen/padding_horizontal"
        android:visibility="gone"
        tool:visibility="visible">

        <TextView
            android:id="@+id/selectedBankName"
            style="@style/WhiteBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_horizontal"
            tool:text="Absa Bank" />

        <TextView
            android:id="@+id/selectedBankBranch"
            style="@style/LongDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectedBankName"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:layout_marginTop="@dimen/padding_mini"
            android:textColor="@color/whiteSecondary"
            tool:text="Branch number: 591000" />

        <TextView
            android:id="@+id/selectedBankAccountNumber"
            style="@style/WhiteBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/padding_horizontal"
            tool:text="32423423423" />

        <TextView
            android:id="@+id/selectedBankAccountType"
            style="@style/LongDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectedBankAccountNumber"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/padding_mini"
            android:layout_marginEnd="@dimen/padding_horizontal"
            android:textColor="@color/whiteSecondary"
            tool:text="current/cheque account" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/paymentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/topDivider"
        android:visibility="gone">

        <TextView
            android:id="@+id/paymentMessage"
            style="@style/LongWhiteDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_horizontal"
            android:background="@drawable/bg_card_transparent"
            android:layout_margin="@dimen/padding_horizontal"
            android:textSize="@dimen/text_size_small"
            android:textIsSelectable="true"
            android:gravity="start"/>

        <LinearLayout
            android:id="@+id/payFastButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:gravity="center"
            android:layout_marginTop="@dimen/padding_horizontal"
            android:orientation="vertical">

            <io.demars.stellarwallet.views.DmcRoundButton
                android:id="@+id/payFastButton"
                android:layout_width="@dimen/logo_width_pin"
                android:layout_height="@dimen/logo_width_pin"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background_round_clickable_green"
                android:padding="@dimen/padding_vertical"
                android:src="@drawable/ic_logo_payfast" />

            <TextView
                android:id="@+id/payFastButtonLabel"
                style="@style/WhiteDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_horizontal"
                android:text="@string/payfast_button_label" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/topTitle"
        style="@style/WhiteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="@dimen/padding_mini"
        android:layout_marginTop="@dimen/padding_mini"
        android:layout_marginEnd="@dimen/padding_mini"
        android:padding="@dimen/padding_mini"
        android:text="@string/bank_account"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_big" />

    <TextView
        android:id="@+id/amountTitle"
        style="@style/WhiteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectedBankContainer"
        android:layout_marginStart="@dimen/padding_mini"
        android:layout_marginTop="@dimen/padding_mini"
        android:layout_marginEnd="@dimen/padding_mini"
        android:padding="@dimen/padding_mini"
        android:text="@string/amount"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_big"
        android:visibility="gone"
        tool:visibility="visible"/>

    <TextView
        android:id="@+id/editAmountButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_above="@id/amountDivider"
        android:layout_alignParentEnd="true"
        android:paddingStart="@dimen/padding_horizontal"
        android:paddingEnd="@dimen/padding_horizontal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:fontFamily="@font/opensans_semibold"
        android:gravity="center"
        android:text="@string/edit"
        android:textAllCaps="true"
        android:textColor="@color/colorYellow"
        android:textSize="@dimen/text_size_small"
        android:theme="@style/ClickableItem"
        android:visibility="gone" />

    <TextView
        android:id="@+id/amountTip"
        style="@style/LongWhiteDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/numberKeyboard"
        android:paddingStart="@dimen/padding_horizontal"
        android:paddingTop="@dimen/padding_mini"
        android:paddingEnd="@dimen/padding_horizontal"
        android:paddingBottom="@dimen/padding_mini"
        android:text="@string/pattern_deposit_limit"
        android:visibility="gone" />

    <View
        android:id="@+id/topDivider"
        style="@style/HorizontalDividerWhite"
        android:layout_below="@id/topTitle"
        android:layout_marginStart="@dimen/padding_horizontal"
        android:layout_marginEnd="@dimen/padding_horizontal" />

    <View
        android:id="@+id/amountDivider"
        style="@style/HorizontalDividerWhite"
        android:layout_below="@id/amountTitle"
        android:layout_marginStart="@dimen/padding_horizontal"
        android:layout_marginEnd="@dimen/padding_horizontal"
        android:visibility="gone"
        tool:visibility="visible"/>

    <View
        android:id="@+id/keyboardDivider"
        style="@style/HorizontalDividerWhite"
        android:layout_above="@id/numberKeyboard"
        android:visibility="gone" />

    <io.demars.stellarwallet.views.pin.PinLockView
        android:id="@+id/numberKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/bgWhiteTransparent"
        android:paddingTop="@dimen/padding_mini"
        android:paddingBottom="@dimen/padding_mini"
        android:visibility="gone"
        app:keypadButtonSize="@dimen/button_height_big"
        app:keypadDeleteButtonDrawable="@drawable/ic_backspace_24dp"
        app:keypadHorizontalSpacing="@dimen/padding_horizontal"
        app:keypadShowDeleteButton="true"
        app:keypadTextColor="@color/whiteMain"
        app:keypadTextSize="@dimen/keypad_size"
        app:keypadVerticalSpacing="@dimen/pin_spacing_vertical"
        app:pinLength="4"/>

</RelativeLayout>