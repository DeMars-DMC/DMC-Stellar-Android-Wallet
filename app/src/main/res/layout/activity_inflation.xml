<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InflationActivity">

    <FrameLayout
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:layout_marginTop="@dimen/padding_macro"
            android:layout_marginEnd="@dimen/padding_horizontal"
            android:layout_marginBottom="@dimen/padding_macro"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/receive"
            android:paddingStart="@dimen/padding_zero"
            android:paddingTop="@dimen/padding_horizontal"
            android:paddingEnd="@dimen/padding_horizontal"
            android:paddingBottom="@dimen/padding_horizontal"
            android:src="@drawable/ic_chevron_left" />

        <TextView
            style="@style/WhiteTitle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:textAllCaps="false"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/inflation_destination"
            android:textSize="@dimen/text_size_medium" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/saveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/inflationInfoTextView"
            style="@style/WhiteDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_vertical"
            android:text="@string/inflation_info_message"
            android:paddingStart="@dimen/padding_horizontal"
            android:paddingEnd="@dimen/padding_horizontal"
            android:gravity="center" />


        <LinearLayout
            android:id="@+id/addressContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_big"
            android:layout_margin="@dimen/padding_vertical"
            android:background="@drawable/bg_card_transparent"
            android:elevation="@dimen/elevation_mini"
            android:orientation="horizontal"
            tools:ignore="UnusedAttribute">

            <EditText
                style="@style/WhiteTitle"
                android:id="@+id/addressEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@null"
                android:digits="@string/stellar_address_alphabet"
                android:hint="@string/send_address_hint"
                android:textColorHint="@color/transparent_white"
                android:inputType="textCapCharacters"
                android:padding="@dimen/padding_horizontal"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textSize="@dimen/text_size_small" />

            <ImageButton
                android:id="@+id/cameraImageButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/padding_horizontal"
                android:paddingEnd="@dimen/padding_horizontal"
                android:elevation="@dimen/elevation_mini"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/copy_address_content_descriptor"
                android:tint="@color/whiteMain"
                android:src="@drawable/ic_qr_scanner" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/saveButton"
        style="@style/ButtonStyleAccentFlat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_big"
        android:layout_alignParentBottom="true"
        android:text="@string/save_button"
        android:textColor="@color/whiteMain"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>