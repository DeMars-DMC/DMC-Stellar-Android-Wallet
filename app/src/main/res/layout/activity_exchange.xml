<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteMain"
    android:orientation="vertical"
    tools:context=".activities.ExchangeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:layout_marginTop="@dimen/padding_macro"
            android:layout_marginEnd="@dimen/padding_horizontal"
            android:layout_marginBottom="@dimen/padding_macro"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/receive"
            android:paddingStart="@dimen/padding_zero"
            android:paddingTop="@dimen/padding_horizontal"
            android:paddingEnd="@dimen/padding_horizontal"
            android:paddingBottom="@dimen/padding_horizontal"
            android:src="@drawable/ic_chevron_left" />

        <TextView
            style="@style/WhiteTitle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:text="@string/exchange"
            android:textSize="@dimen/text_size_medium" />
    </FrameLayout>

    <com.google.android.material.tabs.TabLayout
        android:elevation="6dp"
        tools:ignore="UnusedAttribute"
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextColor="@color/whiteMain"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabTextAppearance="@style/TabTitle" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>