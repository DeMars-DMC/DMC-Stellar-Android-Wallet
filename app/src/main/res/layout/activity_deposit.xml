<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:title="@string/deposit" />

    <TextView
        android:id="@+id/bankingInfoLabel"
        style="@style/BoldText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="@dimen/padding_horizontal"
        android:paddingStart="@dimen/padding_horizontal"
        android:paddingEnd="@dimen/padding_horizontal"
        android:text="@string/banking_information"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nameText"
        style="@style/BoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bankingInfoLabel"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_horizontal"
        android:paddingTop="@dimen/padding_horizontal"
        android:paddingEnd="@dimen/padding_horizontal"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        tool:text="Ivan Ivanov" />

    <TextView
        android:id="@+id/phoneText"
        style="@style/BoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bankingInfoLabel"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_horizontal"
        android:paddingTop="@dimen/padding_horizontal"
        android:paddingEnd="@dimen/padding_horizontal"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:visibility="gone"
        tool:text="+1234567890" />

    <RelativeLayout
        android:id="@+id/selectedBankContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameText"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_horizontal"
        android:paddingBottom="@dimen/padding_horizontal">

        <TextView
            android:id="@+id/selectedBankName"
            style="@style/BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:textSize="@dimen/text_size"
            tool:text="Absa Bank" />

        <TextView
            android:id="@+id/selectedBankBranch"
            style="@style/LongDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectedBankName"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:layout_marginTop="@dimen/padding_mini"
            tool:text="Branch number: 591000" />

        <TextView
            android:id="@+id/selectedBankAccountNumber"
            style="@style/BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/padding_horizontal"
            android:textSize="@dimen/text_size"
            tool:text="32423423423" />

        <TextView
            android:id="@+id/selectedBankAccountType"
            style="@style/LongDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectedBankAccountNumber"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/padding_mini"
            android:layout_marginEnd="@dimen/padding_horizontal"
            tool:text="current/cheque account" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/depositAmountContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedBankContainer"
        android:visibility="gone"
        tool:visibility="visible">

        <TextView
            android:id="@+id/amountLabel"
            style="@style/BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_horizontal"
            android:paddingEnd="@dimen/padding_horizontal"
            android:text="@string/request_amount"
            android:textColor="@color/colorPrimaryDark" />


        <TextView
            android:id="@+id/editAmountButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="@dimen/padding_horizontal"
            android:paddingEnd="@dimen/padding_horizontal"
            android:text="@string/other_amount"
            android:textAllCaps="true"
            android:textColor="@color/colorApricot" />

        <TextView
            android:id="@+id/depositAmountText"
            style="@style/BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amountLabel"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/padding_horizontal"
            android:paddingTop="@dimen/padding_horizontal"
            android:paddingEnd="@dimen/padding_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            tool:text="5000.00 ZAR" />

        <CheckBox
            android:id="@+id/agreeCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/depositAmountText"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:layout_marginTop="@dimen/padding_horizontal"
            android:fontFamily="@font/lato_regular"
            android:gravity="start|center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_micro"
            android:theme="@style/CheckBoxTheme" />

        <TextView
            android:id="@+id/agreeText"
            style="@style/LongDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/agreeCheckBox"
            android:layout_toEndOf="@+id/agreeCheckBox"
            android:gravity="start"
            android:paddingTop="@dimen/padding_mini"
            android:paddingBottom="@dimen/padding_mini"
            android:text="@string/agree_request_terms"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small" />

        <Button
            android:id="@+id/confirmButton"
            style="@style/ButtonStyleAccent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/agreeText"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:layout_marginTop="@dimen/padding_mini"
            android:layout_marginEnd="@dimen/padding_horizontal"
            android:enabled="false"
            android:text="@string/confirm_and_submit" />

        <TextView
            android:id="@+id/depositConfirmExplain"
            style="@style/LongDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmButton"
            android:paddingStart="@dimen/padding_horizontal"
            android:paddingTop="@dimen/padding_mini"
            android:paddingEnd="@dimen/padding_horizontal"
            android:paddingBottom="@dimen/padding_mini"
            android:text="@string/deposit_confirm_massage" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_below="@id/depositConfirmExplain"
            android:layout_margin="@dimen/padding_mini"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/addBankContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameText"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/bankPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_arrow_drop_down_palesky_24dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/padding_horizontal"
            android:paddingTop="@dimen/padding_horizontal"
            android:paddingEnd="@dimen/padding_horizontal"
            android:paddingBottom="@dimen/padding_mini"
            android:text="@string/select_bank"
            android:textColor="@color/colorPaleSky"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/accountNumberInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/account_number"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:paddingStart="@dimen/padding_horizontal"
            android:paddingTop="@dimen/padding_mini"
            android:paddingEnd="@dimen/padding_horizontal"
            android:paddingBottom="@dimen/padding_mini"
            android:textColorHint="@color/colorPaleSky"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/accountTypePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_arrow_drop_down_palesky_24dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/padding_horizontal"
            android:paddingTop="@dimen/padding_mini"
            android:paddingEnd="@dimen/padding_horizontal"
            android:paddingBottom="@dimen/padding_mini"
            android:text="@string/account_type"
            android:textColor="@color/colorPaleSky"
            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/addBankButton"
            style="@style/ButtonStyleAccent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:layout_marginTop="@dimen/padding_horizontal"
            android:layout_marginEnd="@dimen/padding_horizontal"
            android:enabled="false"
            android:text="@string/add_bank_account" />

        <TextView
            style="@style/LongDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_horizontal"
            android:paddingTop="@dimen/padding_mini"
            android:paddingEnd="@dimen/padding_horizontal"
            android:paddingBottom="@dimen/padding_mini"
            android:text="@string/bank_account_explain" />

    </LinearLayout>

    <TextView
        android:id="@+id/amountTextView"
        style="@style/BoldText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/limitText"
        android:layout_below="@+id/selectedBankContainer"
        android:gravity="center"
        android:text="@string/default_value"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_xbig"
        android:visibility="gone" />

    <TextView
        android:id="@+id/limitText"
        style="@style/LongDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submitButton"
        android:paddingStart="@dimen/padding_horizontal"
        android:paddingTop="@dimen/padding_horizontal"
        android:paddingEnd="@dimen/padding_horizontal"
        android:paddingBottom="@dimen/padding_mini"
        android:text="@string/pattern_deposit_limit"
        android:visibility="gone" />

    <Button
        android:id="@+id/submitButton"
        style="@style/ButtonStyleAccentFlat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_send"
        android:layout_above="@+id/numberKeyboard"
        android:elevation="0dp"
        android:enabled="false"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:visibility="gone"
        tool:ignore="UnusedAttribute" />

    <io.demars.stellarwallet.views.pin.PinLockView
        android:id="@+id/numberKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        app:keypadButtonSize="@dimen/button_height_big"
        app:keypadDeleteButtonDrawable="@drawable/ic_backspace_24dp"
        app:keypadDotButtonDrawable="@drawable/ic_dot_decimal"
        app:keypadShowDeleteButton="true"
        app:keypadShowDotButton="true"
        app:keypadTextColor="@color/colorPrimary"
        app:keypadTextSize="@dimen/keypad_size" />
</RelativeLayout>