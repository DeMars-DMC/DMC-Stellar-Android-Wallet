<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_horizontal"
    android:layout_marginTop="@dimen/padding_micro"
    android:layout_marginEnd="@dimen/padding_horizontal"
    android:background="@drawable/background_card_transparent">

    <LinearLayout
        android:id="@+id/assetBalanceContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/assetImage"
        android:layout_centerVertical="true"
        android:gravity="start"
        android:orientation="vertical">


        <TextView
            android:id="@+id/assetName"
            style="@style/WhiteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:textSize="@dimen/text_size_xbig"
            tools:text="XLM"/>

        <TextView
            android:id="@+id/assetBalance"
            style="@style/WhiteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:textSize="@dimen/text_size_big"
            tools:text="3432.3242424"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/assetImage"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="@dimen/padding_horizontal"
        android:src="@drawable/ic_logo_stellar"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/rightIcon"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_chevron_right_transparent"
        android:background="?attr/selectableItemBackgroundBorderless"
        tools:ignore="ContentDescription" />

</RelativeLayout>
