<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_vertical"
    android:layout_marginTop="@dimen/padding_horizontal"
    android:layout_marginEnd="@dimen/padding_vertical"
    android:background="@drawable/bg_card">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/assetImage"
        android:layout_alignBottom="@+id/assetImage"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/assetImage"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/assetName"
            style="@style/WhiteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:text="XLM"
            android:textSize="@dimen/text_size_xbig" />

        <TextView
            android:id="@+id/assetBalance"
            style="@style/WhiteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:text="21,035.0215719"
            android:textSize="@dimen/text_size_big" />

    </LinearLayout>

    <ImageView
        android:id="@+id/assetImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/padding_horizontal"
        android:layout_marginTop="@dimen/padding_horizontal"
        android:layout_marginEnd="@dimen/padding_horizontal"
        android:src="@drawable/ic_logo_stellar"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/defaultImage"
        style="@style/WhiteTitle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/padding_horizontal"
        android:background="@drawable/bg_round_button_grey"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_mini"
        android:paddingStart="@dimen/padding_mini"
        android:paddingEnd="@dimen/padding_mini"
        android:layout_below="@id/assetImage"
        android:weightSum="1">

        <Button
            android:id="@+id/leftButton"
            style="@style/WhiteTitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="0.5"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/roboto_light"
            android:text="@string/buy"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/rightButton"
            style="@style/WhiteTitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="0.5"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/roboto_light"
            android:text="@string/set_inflation"
            android:textColor="@color/colorAccent" />

    </LinearLayout>
</RelativeLayout>
