<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@font/opensans_regular</item>
        <item name="android:buttonStyle">@font/opensans_regular</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="BlackTheme" parent="AppTheme"/>

    <style name="TransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:background">@color/blueDark</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="CheckBoxTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/colorDisabled</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:background">@color/main_bg_light</item>
    </style>

    <style name="NavTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/navigation_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="WhiteDescription" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="LongDescription" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPaleSky</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="RegularText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="BoldText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="RegularWhiteText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="DigitalWhiteInput" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_xbig</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ListTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorDisabled</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="TabTitle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="ButtonStyleBorderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="ButtonStyleAccent" parent="ButtonStyle">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_accent</item>
    </style>

    <style name="ButtonStyleAccentFlat" parent="ButtonStyle">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_accent_flat</item>
    </style>

    <style name="ButtonStyleYellow" parent="ButtonStyle">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_yellow</item>
    </style>

    <style name="ButtonStyleBlue" parent="ButtonStyle">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="SettingsTitle" parent="RegularText">
        <item name="android:textColor">@color/blueDark</item>
    </style>

    <style name="SettingsButton" parent="RegularText">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
    </style>

</resources>
