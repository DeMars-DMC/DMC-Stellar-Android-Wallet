<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:stateListAnimator="@null"
        tools:ignore="UnusedAttribute">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">

                <ImageButton
                    android:id="@+id/exchangeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/padding_horizontal"
                    android:layout_marginEnd="@dimen/padding_horizontal"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/receive"
                    android:src="@drawable/ic_receive"
                    android:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/walletLogo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/walletLogo" />

                <ImageButton
                    android:id="@+id/accountButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/padding_horizontal"
                    android:layout_marginEnd="@dimen/padding_horizontal"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_settings"
                    android:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/walletLogo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/walletLogo" />
            </androidx.appcompat.widget.Toolbar>

            <androidx.constraintlayout.widget.ConstraintLayout xmlns:tool="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/walletLogo"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:paddingTop="@dimen/padding_mini"
                    android:paddingBottom="@dimen/padding_mini"
                    android:src="@drawable/ic_logo_dmc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tool:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/totalBalanceContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/walletLogo">

                    <TextView
                        android:id="@+id/totalBalanceLabel"
                        style="@style/WhiteTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_balance" />

                    <TextView
                        android:id="@+id/totalBalanceView"
                        style="@style/WhiteDigitalInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:text="38,808.2342234"
                        android:textSize="@dimen/text_size_xxbig" />

                </LinearLayout>

                <Button
                    android:id="@+id/reportingCurrency"
                    style="@style/WhiteDigitalInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_micro"
                    android:background="@drawable/background_card_transparent"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="@dimen/padding_mini"
                    android:paddingTop="@dimen/padding_micro"
                    android:paddingEnd="@dimen/padding_micro"
                    android:paddingBottom="@dimen/padding_micro"
                    android:text="XLM"
                    android:textSize="@dimen/text_size_xbig"
                    app:layout_constraintBottom_toBottomOf="@+id/tradeButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tradeButton" />

                <ImageButton
                    android:id="@+id/tradeButton"
                    android:layout_width="@dimen/button_height_big"
                    android:layout_height="@dimen/button_height_big"
                    android:background="@drawable/background_button_round_transparent"
                    android:src="@drawable/ic_trading"
                    android:tint="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/totalBalanceContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/totalBalanceContainer" />

                <TextView
                    android:id="@+id/tradeLabel"
                    style="@style/WhiteLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_micro"
                    android:text="@string/trade"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_micro"
                    app:layout_constraintEnd_toEndOf="@+id/tradeButton"
                    app:layout_constraintStart_toStartOf="@+id/tradeButton"
                    app:layout_constraintTop_toBottomOf="@+id/tradeButton" />

                <ImageButton
                    android:id="@+id/detailsButton"
                    android:layout_width="@dimen/button_height_big"
                    android:layout_height="@dimen/button_height_big"
                    android:background="@drawable/background_button_round_transparent"
                    android:src="@drawable/ic_more"
                    android:tint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/totalBalanceContainer"
                    app:layout_constraintTop_toBottomOf="@+id/totalBalanceContainer" />

                <TextView
                    android:id="@+id/detailsLabel"
                    style="@style/WhiteLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_micro"
                    android:text="@string/details"
                    app:layout_constraintEnd_toEndOf="@+id/detailsButton"
                    app:layout_constraintStart_toStartOf="@+id/detailsButton"
                    app:layout_constraintTop_toBottomOf="@+id/detailsButton" />

                <TextView
                    android:id="@+id/reportingCurrencyLabel"
                    style="@style/WhiteLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reporting_currency"
                    app:layout_constraintBottom_toBottomOf="@+id/tradeLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tradeLabel" />

                <View
                    android:id="@+id/walletDivider"
                    style="@style/HorizontalDividerWhite"
                    android:layout_marginStart="@dimen/padding_vertical"
                    android:layout_marginTop="@dimen/padding_horizontal"
                    android:layout_marginEnd="@dimen/padding_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/reportingCurrencyLabel" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/assetsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
