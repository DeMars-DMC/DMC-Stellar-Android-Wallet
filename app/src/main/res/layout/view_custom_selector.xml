<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height_big"
        android:layout_weight=".75"
        android:clickable="true"
        android:focusable="true">

        <EditText
            android:id="@+id/editTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_edittext"
            android:duplicateParentState="true"
            android:fontFamily="@font/lato_regular"
            android:paddingStart="@dimen/padding_horizontal"
            android:paddingEnd="@dimen/button_height_big"
            android:textColor="@color/black"
            android:textColorHint="@color/selectorHint"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/button_height_big"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:paddingTop="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_medium"
            android:paddingStart="@dimen/padding_mini"
            android:paddingEnd="@dimen/padding_mini" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/spinnerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:background="@drawable/selector_spinner">

        <io.demars.stellarwallet.views.PatchedSearchableSpinner
            android:id="@+id/spinner"
            style="@style/Widget.AppCompat.DropDownItem.Spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_big"
            android:backgroundTint="@color/white"
            android:spinnerMode="dialog"
            tools:ignore="UnusedAttribute" />
    </FrameLayout>

</LinearLayout>