<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_dark"
    android:orientation="vertical"
    tools:context=".activities.AssetActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="@dimen/padding_vertical"
            android:layout_height="@dimen/button_height_big"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:layout_marginEnd="@dimen/padding_horizontal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/receive"
            android:src="@drawable/ic_chevron_left"
            android:theme="@style/ClickableItem" />

        <ImageView
            android:id="@+id/assetLogo"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:contentDescription="@string/reporting_currency"
            android:layout_toEndOf="@id/backButton"
            tools:src="@drawable/ic_logo_stellar_white" />

        <LinearLayout
            android:id="@+id/assetBalanceContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:orientation="vertical"
            android:layout_toEndOf="@id/assetLogo"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/assetName"
                style="@style/WhiteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="XLM" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/assetBalance"
                    style="@style/WhiteDigitalInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="@dimen/text_size_xxbig"
                    tools:text="353.23" />

                <TextView
                    android:id="@+id/reportingCurrency"
                    style="@style/WhiteDigitalInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_card_clickable"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="@dimen/padding_mini"
                    android:paddingTop="@dimen/padding_micro"
                    android:paddingEnd="@dimen/padding_micro"
                    android:paddingBottom="@dimen/padding_micro"
                    android:textSize="@dimen/text_size_big"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/availableBalanceView"
                style="@style/WhiteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:textAllCaps="false"
                android:textColor="@color/colorGreen"
                tools:text="Available: 35.04" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding_horizontal"
            android:weightSum="4"
            android:layout_below="@+id/assetBalanceContainer">

            <LinearLayout
                android:id="@+id/container1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/button1"
                    android:layout_width="@dimen/button_height_big"
                    android:layout_height="@dimen/button_height_big"
                    android:background="@drawable/background_round_clickable"
                    android:padding="@dimen/padding_mini"
                    android:src="@drawable/ic_arrow_deposit" />

                <TextView
                    android:id="@+id/label1"
                    style="@style/WhiteTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_micro"
                    android:text="@string/deposit"
                    android:textSize="@dimen/text_size_micro" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/container2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/button2"
                    android:layout_width="@dimen/button_height_big"
                    android:layout_height="@dimen/button_height_big"
                    android:background="@drawable/background_round_clickable"
                    android:padding="@dimen/padding_mini"
                    android:src="@drawable/ic_arrow_withdraw" />

                <TextView
                    android:id="@+id/label2"
                    style="@style/WhiteTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_micro"
                    android:text="@string/withdraw"
                    android:textSize="@dimen/text_size_micro" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/container3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/button3"
                    android:layout_width="@dimen/button_height_big"
                    android:layout_height="@dimen/button_height_big"
                    android:background="@drawable/background_round_clickable"
                    android:padding="@dimen/padding_mini"
                    android:src="@drawable/ic_arrow_exchange" />

                <TextView
                    android:id="@+id/label3"
                    style="@style/WhiteTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_micro"
                    android:text="@string/exchange"
                    android:textSize="@dimen/text_size_micro" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/container4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/button4"
                    android:layout_width="@dimen/button_height_big"
                    android:layout_height="@dimen/button_height_big"
                    android:background="@drawable/background_round_clickable"
                    android:padding="@dimen/padding_mini"
                    android:src="@drawable/ic_arrow_pay" />

                <TextView
                    android:id="@+id/label4"
                    style="@style/WhiteTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_micro"
                    android:text="@string/pay"
                    android:textSize="@dimen/text_size_micro" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/walletDivider"
            style="@style/HorizontalDividerWhite"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:layout_marginTop="@dimen/padding_mini"
            android:layout_marginEnd="@dimen/padding_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/buttonsContainer" />

    </RelativeLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/transactionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:fadeScrollbars="false"
            android:overScrollMode="never"
            android:paddingBottom="@dimen/padding_horizontal" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>