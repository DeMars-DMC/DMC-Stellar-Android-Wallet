<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:stateListAnimator="@null"
        tools:ignore="UnusedAttribute">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/totalBalanceLogo"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginStart="@dimen/padding_horizontal"
                android:contentDescription="@string/reporting_currency"
                android:src="@drawable/ic_logo_stellar_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/totalBalanceContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/totalBalanceLogo"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/totalBalanceLabel"
                    style="@style/WhiteTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_balance" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/totalBalanceView"
                        style="@style/WhiteDigitalInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:textSize="@dimen/text_size_xxbig" />

                    <TextView
                        android:id="@+id/reportingCurrency"
                        style="@style/WhiteDigitalInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_card_transparent"
                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                        android:fontFamily="@font/roboto_light"
                        android:paddingStart="@dimen/padding_mini"
                        android:paddingTop="@dimen/padding_micro"
                        android:paddingEnd="@dimen/padding_micro"
                        android:paddingBottom="@dimen/padding_micro"
                        android:textSize="@dimen/text_size_big"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/accountButton"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_settings"
                android:tint="@color/whiteMain"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/walletDivider"
                style="@style/HorizontalDividerWhite"
                android:layout_marginStart="@dimen/padding_horizontal"
                android:layout_marginTop="@dimen/padding_mini"
                android:layout_marginEnd="@dimen/padding_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/totalBalanceContainer" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/fundingState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone"
            tools:ignore="UseCompoundDrawables"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/qrCode"
                android:layout_width="@dimen/qr_code_size_mini"
                android:layout_height="@dimen/qr_code_size_mini"
                android:layout_gravity="center"
                android:background="@drawable/qr_code"
                android:contentDescription="@string/public_address"
                android:elevation="@dimen/elevation_mini"
                android:padding="@dimen/padding_mini"
                tools:ignore="ContentDescription,UnusedAttribute" />

            <RelativeLayout
                android:id="@+id/addressCopyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_vertical"
                android:layout_marginStart="@dimen/padding_horizontal"
                android:layout_marginEnd="@dimen/padding_horizontal"
                android:background="@drawable/background_card_transparent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addressTextView"
                    style="@style/WhiteTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/copyIcon"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:paddingStart="@dimen/padding_horizontal"
                    android:paddingTop="@dimen/padding_horizontal"
                    android:paddingEnd="@dimen/padding_zero"
                    android:paddingBottom="@dimen/padding_horizontal"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_big" />

                <ImageView
                    android:id="@+id/copyIcon"
                    android:layout_width="@dimen/button_height_big"
                    android:layout_height="@dimen/button_height_big"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/copy_address_content_descriptor"
                    android:paddingTop="@dimen/padding_horizontal"
                    android:paddingBottom="@dimen/padding_horizontal"
                    android:src="@drawable/ic_copy" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/openAccountButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_big"
                android:layout_marginTop="@dimen/padding_mini"
                android:layout_marginStart="@dimen/padding_horizontal"
                android:layout_marginEnd="@dimen/padding_horizontal"
                android:background="@drawable/background_card_transparent_accent"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    style="@style/WhiteTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:text="@string/open_account"
                    android:singleLine="true"/>

                <ImageView
                    android:layout_width="@dimen/button_height_big"
                    android:layout_height="@dimen/button_height_big"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/copy_address_content_descriptor"
                    android:paddingTop="@dimen/padding_horizontal"
                    android:paddingBottom="@dimen/padding_horizontal"
                    android:src="@drawable/ic_person_accent" />

            </RelativeLayout>

            <TextView
                style="@style/WhiteDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_vertical"
                android:paddingRight="@dimen/padding_vertical"
                android:layout_marginTop="@dimen/padding_vertical"
                android:text="@string/fund_account_string" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/assetsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:overScrollMode="never" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
