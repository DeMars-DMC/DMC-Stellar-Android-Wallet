<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="@color/transparent_white" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/transparent_red" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="oval">
            <solid android:color="@color/bgWhiteTransparent" />
            <stroke android:width="1dp" android:color="@color/transparent_red" />
        </shape>
    </item>
</selector>