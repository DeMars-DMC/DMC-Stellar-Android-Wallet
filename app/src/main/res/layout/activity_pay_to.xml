<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:stateListAnimator="@null"
        tool:ignore="UnusedAttribute">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_horizontal">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_horizontal"
                android:layout_marginTop="@dimen/padding_macro"
                android:layout_marginEnd="@dimen/padding_horizontal"
                android:layout_marginBottom="@dimen/padding_macro"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/receive"
                android:paddingTop="@dimen/padding_horizontal"
                android:paddingBottom="@dimen/padding_horizontal"
                android:src="@drawable/ic_chevron_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/assetLogo"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginStart="@dimen/padding_horizontal"
                android:contentDescription="@string/reporting_currency"
                app:layout_constraintEnd_toStartOf="@id/assetBalanceContainer"
                app:layout_constraintStart_toEndOf="@id/backButton"
                app:layout_constraintTop_toTopOf="parent"
                tool:src="@drawable/ic_logo_stellar_white" />

            <LinearLayout
                android:id="@+id/assetBalanceContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_horizontal"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/assetLogo"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/assetName"
                    style="@style/WhiteTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tool:text="XLM" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/assetBalance"
                        style="@style/WhiteDigitalInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:textSize="@dimen/text_size_xxbig"
                        tool:text="353.23" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addressContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_big"
                android:layout_margin="@dimen/padding_horizontal"
                android:background="@drawable/bg_card_transparent"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/assetBalanceContainer"
                tool:ignore="UnusedAttribute">

                <EditText
                    android:id="@+id/addressEditText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@null"
                    android:digits="@string/stellar_address_alphabet"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/enter_public_address"
                    android:inputType="textCapCharacters"
                    android:padding="@dimen/padding_horizontal"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/whiteMain"
                    android:textColorHint="@color/transparent_white"
                    android:textSize="@dimen/text_size_small"
                    tool:text="ALAJSLDJFALSKDFJ2L3KDFASDFSDA4JLSDKFJL34KJ5LKSZJGFLKSJL4" />

                <ImageButton
                    android:id="@+id/cameraImageButton"
                    android:layout_width="@dimen/button_height_big"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/open_camera_to_scan_qr"
                    android:src="@drawable/ic_qr_scanner" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/payToContactButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_big"
                android:layout_marginStart="@dimen/padding_horizontal"
                android:layout_marginTop="@dimen/padding_mini"
                android:layout_marginEnd="@dimen/padding_horizontal"
                android:layout_marginBottom="@dimen/padding_mini"
                android:background="@drawable/background_card_transparent_accent"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/addressContainer">

                <TextView
                    style="@style/ButtonTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/pay_to_contact"
                    android:textColor="@color/colorAccent"/>

                <ImageView
                    android:layout_width="@dimen/button_height_big"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center_vertical"
                    android:padding="@dimen/padding_medium"
                    android:src="@drawable/ic_contact_pay"
                    android:tint="@color/colorAccent"/>
            </FrameLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/bottomButton"
        style="@style/ButtonStyleAccentFlat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_big"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/padding_horizontal"
        android:elevation="@dimen/elevation"
        android:text="@string/next"
        tool:ignore="UnusedAttribute" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
