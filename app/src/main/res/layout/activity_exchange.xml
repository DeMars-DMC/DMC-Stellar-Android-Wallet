<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    android:orientation="vertical"
    tools:context=".activities.ExchangeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_big">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="@dimen/button_height"
            android:layout_height="@dimen/button_height_big"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/padding_medium"
            android:src="@drawable/ic_chevron_left"
            android:theme="@style/ClickableItem" />

        <TextView
            style="@style/WhiteTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/exchange"
            android:textSize="@dimen/text_size_medium" />
    </FrameLayout>

    <com.google.android.material.tabs.TabLayout
        tools:ignore="UnusedAttribute"
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextColor="@color/whiteMain"
        android:background="@drawable/bg_line_transparent"
        android:layout_marginStart="-2dp"
        android:layout_marginEnd="-2dp"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabTextAppearance="@style/TabTitle" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>