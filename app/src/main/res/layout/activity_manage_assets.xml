<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/walletLogo"
        android:layout_width="@dimen/button_height_big"
        android:layout_height="@dimen/button_height_big"
        android:paddingTop="@dimen/padding_mini"
        android:paddingBottom="@dimen/padding_mini"
        android:src="@drawable/ic_logo_dmc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:ignore="ContentDescription" />

    <TextView
        android:id="@+id/totalBalanceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_balance"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_micro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walletLogo" />

    <TextView
        android:id="@+id/totalBalance"
        style="@style/WhiteDigitalInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:textSize="@dimen/text_size_xbig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalBalanceLabel"
        tool:text="38,808.2342234" />

    <TextView
        android:id="@+id/reportingCurrency"
        style="@style/WhiteDigitalInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_light"
        android:textSize="@dimen/text_size_xbig"
        android:background="@drawable/bg_rounded_button_white"
        android:paddingStart="@dimen/padding_mini"
        android:paddingEnd="@dimen/padding_micro"
        android:paddingTop="@dimen/padding_micro"
        android:paddingBottom="@dimen/padding_micro"
        android:layout_marginTop="@dimen/padding_micro"
        android:drawableEnd="@drawable/ic_arrow_drop_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalBalance"
        tool:text="XLM" />

    <ImageButton
        android:id="@+id/exchangeButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/badge_height"
        android:layout_marginStart="@dimen/padding_horizontal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_trading"
        android:tint="@color/white"
        android:layout_marginEnd="@dimen/padding_horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/walletLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/walletLogo" />

    <ImageButton
        android:id="@+id/accountButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/badge_height"
        android:layout_marginEnd="@dimen/padding_horizontal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_settings"
        android:tint="@color/white"
        android:layout_margin="@dimen/padding_horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/walletLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/walletLogo" />

    <ImageButton
        android:layout_width="@dimen/button_height_big"
        android:layout_height="@dimen/button_height_big"
        android:background="@drawable/bg_round_button_white"
        android:src="@drawable/ic_receive"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reportingCurrency"
        app:layout_constraintTop_toBottomOf="@+id/reportingCurrency" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageButton
        android:layout_width="@dimen/button_height_big"
        android:layout_height="@dimen/button_height_big"
        android:background="@drawable/bg_round_button_white"
        android:src="@drawable/ic_more"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reportingCurrency"
        app:layout_constraintTop_toBottomOf="@+id/reportingCurrency" />


