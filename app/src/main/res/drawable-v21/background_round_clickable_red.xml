<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/transparent_red">
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="@color/whiteMain" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="oval">
                    <stroke
                        android:width="1dp"
                        android:color="@color/transparent_white" />
                </shape>
            </item>

            <item android:state_enabled="true">
                <shape android:shape="oval">
                    <solid android:color="@color/bgWhiteTransparent" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/transparent_red" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>